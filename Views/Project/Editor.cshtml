@model SimpLeX_Frontend.Models.ProjectViewModel

@{
    ViewData["Title"] = Model.Title;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/editor_stylesheet.css">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/css/chat_stylesheet.css">
</head>
<body>
<div class="editor-header">
    <div class="left-buttons">
        <div id="menuDropdown" class="dropdown">
            <button id="menuButton" class="menu-btn">Menu</button>
            <div id="menuDropdownContent" class="dropdown-content">
                <button id="renameProjectBtn" onclick="renameProject()">Rename Project</button>
                <button id="exportPDFBtn" onclick="exportAsPDF()">Export as PDF</button>
                <button id="exportTEXBtn" onclick="exportAsTEX()">Export as TEX</button>
                <button id="saveTemplateBtn" onclick="saveAsTemplate()">Save as Custom Template</button>
            </div>
        </div>
        <button id="homeButton" class="home-btn" onclick="location.href='@Url.Action("GoHome", "Editor")'">Home</button>
        <button id="imageGalleryButton" class="btn btn-primary" data-toggle="modal" data-target="#imageGalleryModal">Image Gallery</button>
        <button id="citationsButton" class="btn btn-secondary" data-toggle="modal" data-target="#citationGalleryModal">Citations</button>
    </div>
    <div class="center-title">
        <h1 id="projectTitle" class="project-title">@ViewData["Title"]</h1>
        <div class="additional-info">
            <span id="wordCount" class="word-count">WORDS: 0</span>
            <span id="collaboratorsCount" class="collaborators-count" onclick="toggleCollaboratorsModal();">
                <i class="fas fa-users"></i> <span id="activeCollaborators">0</span>
            </span>
        </div>
    </div>
    <div class="right-buttons">
        <button id="shareButton" class="share-btn">Share</button>
        <button id="chatButton" class="chat-btn">Chat</button>
    </div>
</div>


<div class="editor-container">

    <div class="modal fade" id="imageGalleryModal" tabindex="-1" role="dialog" aria-labelledby="imageGalleryModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageGalleryModalLabel">Image Gallery</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-muted text-center">
                        Upload and manage your images here. Click on an image block then an image to select it for use in your document.
                    </p>
                    <div id="imageGallery" class="d-flex flex-wrap justify-content-start"></div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <input type="file" id="imageUploadInput" accept="image/*" style="display: none;">
                    <button id="uploadImageButton" class="btn btn-primary">Upload Image</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="citationGalleryModal" tabindex="-1" role="dialog" aria-labelledby="citationGalleryModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="citationGalleryModalLabel">Manage Citations</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="citationInstructions" class="text-muted" style="display: none;">
                        <strong>Instructions:</strong> Please fill out as many fields as possible to ensure the citation is complete and useful. Not all fields are required, but a more complete citation provides better support for your work. Fields that are not applicable can simply be left blank.
                    </p>
                    <div id="citationListContainer" class="list-group" style="display:block;">
                        <div id="citationList">
                            <!-- Citations will be dynamically added here -->
                        </div>
                    </div>
                    <div id="citationFormContainer" class="mt-4" style="display:none;">
                        <select class="form-control mb-3" id="citationTypeSelect">
                            <option value="article">Article</option>
                            <option value="book">Book</option>
                            <option value="chapter">Chapter</option>
                            <option value="thesis">Thesis</option>
                            <option value="report">Report</option>
                            <option value="misc">Miscellaneous</option>
                        </select>
                        <form id="citationForm" class="form-horizontal">
                            <!-- Dynamic form content will be loaded here based on selection -->
                        </form>
                        <button id="submitCitationForm" class="btn btn-success">Submit Citation</button>
                    </div>
                </div>
                <div id="modal-footer" class="modal-footer">
                    <button id="showAddCitationFormButton" class="btn btn-primary">Add Citation</button>
                </div>
            </div>
        </div>
    </div>



    <div class="modal fade" id="collaboratorsModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Active Collaborators</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul id="collaboratorList"></ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Share Link Modal -->
    <div class="modal fade" id="shareLinkModal" tabindex="-1" aria-labelledby="shareLinkModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="shareLinkModalLabel">Share Project Link</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Copy this link and send it to your collaborators:</p>
                    <input type="text" class="form-control" id="shareLinkInput" readonly>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="copyToClipboard()">Copy Link</button>
                </div>
            </div>
        </div>
    </div>

    @Html.AntiForgeryToken()
    <input type="hidden" id="projectId" name="projectId" value="@Model.ProjectId"/>
    <div id='projectData' data-latexcode='@Model.LatexCode' data-workspacestate='@Html.Raw(Model.WorkspaceState)' style='display: none;'></div>

    <div id="quill-editor"></div>
    <div id="blocklyDiv"></div>
        <!-- Toolbox Definition -->
        <xml
          id="toolbox"
          style="display: none">
          <toolboxlabel name="Custom Toolbox" colour="darkslategrey"></toolboxlabel>
          <category
              css-icon="fas fa-file-alt"
              name="Frontpage"
              colour="0">
              <block type="uia_thesis_front_page"></block>
              <block type="uia_standard_report_front_page"></block>
              <block type="uia_ikt_report_front_page"></block>
              <block type="generic_report_front_page"></block>
          </category>
          <category
              css-icon="fas fa-file-signature"
              name="Preliminaries"
              colour="30">
              <block type="acknowledgements_page_block"></block>
              <block type="abstract_page_block"></block>
              <block type="table_of_contents"></block>
              <block type="list_of_figures"></block>
              <block type="list_of_tables"></block>        
          </category>
          <category
              css-icon="fas fa-sitemap"
              name="Structure"
              colour="230">
              <block type="chapter"></block>
              <block type="section"></block>
              <block type="subsection"></block>
              <block type="subsubsection"></block>
              <block type="new_page"></block>
          </category>
          <category
              css-icon="fas fa-font"
              name="Text"
              colour="160">
              <block type="regular_text_block"></block>
              <block type="text_left_text_right_multicolumn"></block>
              <block type="text_left_image_right_multicolumn"></block>
              <block type="image_left_text_right_multicolumn"></block>
              <block type="latex_href"></block>
          </category>
          <category
              css-icon="fas fa-images"
              name="Images"
              colour="160">
              <block type="latex_standard_image"></block>
              <block type="latex_simple_image"></block>
              <block type="latex_detailed_image"></block>
          </category>
          <category
              css-icon="fas fa-table"
              name="Tables"
              colour="75">
              <block type="latex_table"></block>
              <block type="latex_matrix"></block>
          </category>
          <category
              css-icon="fas fa-list-ul"
              name="Lists"
              colour="260">
              <block type="latex_item"></block>
              <block type="latex_itemize_list"></block>
              <block type="latex_enumerate_list"></block>
              <block type="latex_alph_list"></block>
              <block type="latex_description_list"></block>
              <block type="latex_description_item"></block>
          </category>
          <category
              css-icon="fas fa-code"
              name="Code"
              colour="300">
              <block type="latex_code_listing"></block>
              <block type="latex_minted_code"></block>
          </category>
        </xml>
    <div class="pdf-viewer" id="pdf-viewer">
        <!-- Display PDF if available -->
        <iframe class="pdfDisplay" id="pdfDisplay"src="/pdfjs/web/viewer.html?file=%2Fimages%2Floading.pdf"style="width:100%;height:100%;" frameborder="0"></iframe>
    </div>

    <!-- Chat Window Container -->
    <div id="chat-window" class="chat-window" style="display:none;">
        <div class="chat-content">
            <!-- messages here pls -->
        </div>
        <div class="chat-input">
            <input type="text" id="chat-message-input" placeholder="Type your message...">
        </div>
    </div>
</div>

<!-- Modals -->
<script>
function toggleCollaboratorsModal() {
    $('#collaboratorsModal').modal('toggle'); // Using jQuery for modal toggle
}
</script>

<!-- Libraries -->
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="https://unpkg.com/blockly/blockly.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

<!-- Blockly blocks -->
<script type="module" src="/js/Blockly/ImageBlocks.js"></script>
<script type="module" src="/js/Blockly/PreliminaryBlocks.js"></script>
<script type="module" src="/js/Blockly/FrontPageBlocks.js"></script>
<script src="/js/Blockly/StructureBlocks.js"></script>
<script type="module" src="/js/Blockly/TextBlocks.js"></script>
<script type="module" src="/js/Blockly/ListBlocks.js"></script>
<script type="module" src="/js/Blockly/ListingAndCodeBlocks.js"></script>
<script src="/js/Blockly/TableBlocks.js"></script>
<script src="js/Blockly/custom_category.js"></script>
<script src="js/Blockly/toolbox_label.js"></script>

<!-- Editor logic -->
<script type="module" src="/js/Editor/EditorMain.js"></script>
<script src="/js/Editor/MenuButtonScripts.js"></script>
<script src="/js/Editor/ImageScripts.js"></script>
<script type="module" src="/js/Editor/CitationScripts.js"></script>
<script src="/js/Editor/ShareButton.js"></script>
<script type="module" src="/js/Editor/ChatLogic.js"></script>





</body>
</html>