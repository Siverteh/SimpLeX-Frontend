@model SimpLeX_Frontend.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="~/css/login_stylesheet.css"> <!-- Assuming the same styles -->
</head>
<body class="login-body">

<form asp-action="Register" method="post" class="login-container">
    <img src="~/images/simplex_logo.png" alt="SimpLeX Logo" class="login-logo">
    
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">@ViewBag.ErrorMessage</div>
    }
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="Username" class="login-label"></label>
        <input asp-for="Username" class="login-input" placeholder="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    
    <div class="form-group">
            <label asp-for="Email" class="login-label"></label>
            <input asp-for="Email" class="login-input" placeholder="Username" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    
    <div class="form-group">
        <label asp-for="Password" class="login-label"></label>
        <input asp-for="Password" type="password" class="login-input" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <!-- Add Confirm Password field for registration -->
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="login-label"></label>
        <input asp-for="ConfirmPassword" type="password" class="login-input" placeholder="Confirm Password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="login-submit">Register</button>
    
    <div class="login-or-separator">
        <span class="login-or-line"></span>
    </div>
    
    <!-- Adjust the links for registration context -->
    <a href="@Url.Action("Login", "Auth")" class="login-link">Already have an account? Log in</a>
</form>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
